						<td colspan="2" style="min-height: 200px; text-align: left;"> 
							<%= bbs.getBbsContent()
							.replaceAll(" ","&nbsp;")
							.replaceAll("<","&lt;")
							.replaceAll(">","&gt;")
							.replaceAll("\n","<br>")
							
							%>
